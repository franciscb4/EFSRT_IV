@model EFSRT_IV.Models.Product

@{
    ViewData["Title"] = "Find";
}

<h1>Producto encontrado</h1>
<hr />

<div>
    <dl class="row">

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.image)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.image)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.price)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.stock)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.stock)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.minStock)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.minStock)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.maxStock)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.maxStock)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.state)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.state)
        </dd>
    </dl>
</div>

<div class="d-flex justify-content-start align-items-center gap-3">
    <a asp-action="UpdateProduct" asp-route-id="@Model.id" class="btn btn-secondary">
        Editar
    </a>
    <a asp-action="DisableProduct" asp-route-id="@Model.id" class="btn btn-secondary">
        Desabilitar
    </a>
    <a asp-action="FindAllProducts" class="btn btn-secondary">
        Volver
    </a>
</div>
