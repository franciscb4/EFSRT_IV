@model EFSRT_IV.Models.User

@{
    ViewData["Title"] = "Registro";
}

<div class="container">
    <div class="mx-auto" style="width: 450px; margin-top: 100px">
        <div class="w-100 p-5 text-white" style="background-color: #051824">
            <h1 class="mb-3 text-center">Registro</h1>

            <form asp-action="SignUp">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group my-3">
                    <label class="control-label">DNI:</label>
                    <input asp-for="dni" class="form-control bg-light" />
                    <span asp-validation-for="dni" class="text-danger"></span>
                </div>
                <div class="form-group my-3">
                    <label class="control-label">Nombre:</label>
                    <input asp-for="name" class="form-control bg-light" />
                    <span asp-validation-for="name" class="text-danger"></span>
                </div>
 
                <div class="form-group my-3">
                    <label class="control-label">Email</label>
                    <input asp-for="email" class="form-control bg-light" />
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>
                <div class="form-group my-3">
                    <label class="control-label">Teléfono:</label>
                    <input asp-for="phone" class="form-control bg-light" />
                    <span asp-validation-for="phone" class="text-danger"></span>
                </div>
                <div class="form-group my-3">
                    <label class="control-label">Contraseña:</label>
                    <input asp-for="password" class="form-control bg-light" />
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>
   
                <div class="form-group mt-4">
                    <input type="submit" value="Registrarse" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
