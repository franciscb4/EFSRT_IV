@model EFSRT_IV.Models.User

@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="mx-auto" style="width: 450px; margin-top: 100px">
        <div class="w-100 p-5 text-white" style="background-color: #051824">
            <h1 class="mb-3 text-center">Login</h1>

            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group my-3">
                    <label class="control-label">Nombre:</label>
                    <input asp-for="email" class="form-control" />
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>
                <div class="form-group my-3">
                    <label class="control-label">Contraseña:</label>
                    <input asp-for="password" class="form-control" />
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <input type="submit" value="Ingresar" class="btn btn-primary" />
                </div>

                @if (ViewBag.userNotFound != null || ViewBag.passInvalid != null)
                {
                    <div class="text-danger h4">
                        <span class="p-2 my-2">
                            @(ViewBag.userNotFound)
                        </span>
                        <span class="p-2 my-2">
                            @(ViewBag.passInvalid)
                        </span>
                    </div>
                }
            </form>
        </div>
    </div>
</div>
