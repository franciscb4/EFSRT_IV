@{
    ViewData["Title"] = "Generar Reportes";
}

<h1>Generar Reportes</h1>
<hr />

<form asp-controller="Reports" asp-action="GenerateReport" method="post">
    <div class="form-group">
        <label for="format">Selecciona Formato del Reporte:</label>
        <select id="format" name="format" class="form-control" required>
            <option value="">-- Selecciona --</option>
            <option value="excel">Excel</option>
            <option value="pdf">PDF</option>
            <option value="csv">CSV</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Descargar Reporte</button>
</form>
